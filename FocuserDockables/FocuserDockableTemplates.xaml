<ResourceDictionary
    x:Class="Cwseo.NINA.Focuser.FocuserDockables.MyPluginDockableTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:alt="clr-namespace:NINA.WPF.Base.View;assembly=NINA.WPF.Base"
    xmlns:local="clr-namespace:Cwseo.NINA.Focuser.FocuserDockables"
    xmlns:mini="clr-namespace:NINA.View.Sequencer.MiniSequencer;assembly=NINA.Sequencer"
    xmlns:nina="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core">

    <!--  The datatemplae for the dockable is indicated by the fully qualified class name and the postfix _Dockable  -->
    <DataTemplate x:Key="Cwseo.NINA.Focuser.FocuserDockables.FocuserDockable_Dockable">
        <Grid Margin="5">
            <Grid Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource VisibilityConverter}}">
                <TextBlock Grid.Column="0"
                     Text="Target"
                     Width="100"
                     Opacity="0.7"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="0,0,5,0"/>

                <TextBox Grid.Column="1"
                     Height="20"
                     Width="90"
                     VerticalAlignment="Top"
                     Margin="0,0,5,0"
                     Text="{Binding TargetPos, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
            <Grid Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Focuser not connected" />
            </Grid>
        </Grid>
    </DataTemplate>

    <!--  This geometrygroup defines a custom SVG to be used with the plugin dockable  -->
    <!-- Icon geometry -->
    <GeometryGroup x:Key="Cwseo.NINA.Manualfocuser_SVG">
        <!-- 브라켓 프레임(면) -->
        <PathGeometry Figures="M 2,2 L 6,2 L 6,3 L 2,3 Z" />
        <PathGeometry Figures="M 2,2 L 3,2 L 3,6 L 2,6 Z" />

        <PathGeometry Figures="M 10,2 L 14,2 L 14,3 L 10,3 Z" />
        <PathGeometry Figures="M 13,2 L 14,2 L 14,6 L 13,6 Z" />

        <PathGeometry Figures="M 2,10 L 3,10 L 3,14 L 2,14 Z" />
        <PathGeometry Figures="M 2,13 L 6,13 L 6,14 L 2,14 Z" />

        <PathGeometry Figures="M 13,10 L 14,10 L 14,14 L 13,14 Z" />
        <PathGeometry Figures="M 10,13 L 14,13 L 14,14 L 10,14 Z" />

        <!-- 가운데 별 -->
        <PathGeometry Figures="M 8,5.0 L 9.0,7.0 L 11.2,7.0 L 9.4,8.3 L 10.1,10.4 L 8,9.2 L 5.9,10.4 L 6.6,8.3 L 4.8,7.0 L 7.0,7.0 Z" />
    </GeometryGroup>
</ResourceDictionary>